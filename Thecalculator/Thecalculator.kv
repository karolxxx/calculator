
Thewidget:
<Button>
    font_size: 30

<Thewidget>:
    Label:
        font_size: 40
        text:'Enter a number'
        pos: 0, 325
        size: "500dp","150dp"
        background_color: (128,128,128,0.7)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size:self.size
                pos: self.pos
    Button:
        text: '0'
        size: "125dp", "65dp"
        pos:  125, 0
        color:'white'
    Button:
        text:'2' 
        size: "125dp", "65dp"
        pos: 125, 65
        color: 'white'
    Button:
        text:'5' 
        size: "125dp", "65dp"
        pos: 125, 130
        color: 'white'
    Button:
        text:'8' 
        size: "125dp", "65dp"
        pos: 125, 195
        color: 'white'
    Button:
        text: '+/-'
        size: "125dp", "65dp"
        pos:  0, 0
        color:'white'
    Button:
        text:'1' 
        size: "125dp", "65dp"
        pos: 0, 65
        color: 'white'         
    Button:
        text:'4' 
